<!-- res/layout/custom_card_view.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="210dp"
    android:layout_height="220dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:background="@color/cyan">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:background="#F9F7F4">

        <RelativeLayout
            android:layout_width="210dp"
            android:layout_height="195dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_bottom_corners">

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/textCreatePizza"
                android:layout_width="135dp"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/myImageView"
                android:textAppearance="@style/create_your"
                android:lineSpacingExtra="-2sp"
                android:gravity="center_horizontal|center_vertical"/>

            <TextView
                android:id="@+id/choose_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textCreatePizza"
                android:layout_centerHorizontal="true"
                android:lineSpacingExtra="0sp"
                android:gravity="center_horizontal|center_vertical"
                android:alpha="0.8"/>

        </RelativeLayout>
    </FrameLayout>

    <!-- Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="111dp"
        android:layout_height="28dp"
        android:layout_gravity="bottom|center_horizontal"
        android:fontFamily="@font/signika_semibold"
        android:textSize="12sp"
        android:textColor="@android:color/background_dark"
        android:elevation="0dp"
        android:layout_marginBottom="8dp"
        android:paddingBottom="2dp"/>
</androidx.cardview.widget.CardView>
