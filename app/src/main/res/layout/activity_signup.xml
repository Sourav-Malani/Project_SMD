<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".signup">


    <View
        android:id="@+id/ellipse_126"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-41dp"
        android:layout_marginTop="-12dp"
        android:background="@drawable/ellipse_1" />

    <ImageView
        android:id="@+id/ellipse_127"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="-55dp"
        android:src="@drawable/cir" />

    <ImageView
        android:id="@+id/ellipse_128"
        android:layout_width="181dp"
        android:layout_height="181dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="317dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/cir1" />

    <!-- XML layout file (activity_main.xml) -->
    <TextView
        android:id="@+id/sign_up"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="26dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="98dp"
        android:text="Sign Up"
        android:textSize="36.41sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="top" />



    <TextView
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/sign_up"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="22dp"
        android:gravity="top"
        android:text="Full name"
        android:textColor="#9796A1"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/usernameText"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/full_name"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/rectanglebox"
        android:hint="Enter your name"
        android:textStyle="bold"
        android:padding="16dp" />


    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/usernameText"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="22dp"
        android:gravity="top"
        android:text="E-mail"
        android:textColor="#9796A1"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/rectanglebox"
        android:hint="Enter your email"
        android:textStyle="bold"
        android:padding="16dp" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/emailText"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="22dp"
        android:gravity="top"
        android:text="Password"
        android:textColor="#9796A1"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordText"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:hint="Password"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/rectanglebox"
            android:hint="Password"
            android:padding="16dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/signUpButton"
        android:layout_width="200dp"
        android:layout_below="@+id/passwordText"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="22dp"
        android:text="Sign Up"
        android:background="@drawable/bavkground_button"
        android:textColor="#FFFFFF"
        android:paddingStart="16dp"
        android:gravity="center_horizontal|top"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/textbl"
        android:layout_below="@+id/signUpButton"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#FFA500" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textbl2"
        android:layout_below="@+id/textbl"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign up with " />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#000000" />
    </LinearLayout>




    <View
        android:id="@+id/btn_facebook"
        android:layout_width="139.26dp"
        android:layout_height="54dp"
        android:layout_below="@+id/textbl2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/rectangle_white"
        android:elevation="35.75dp" />

    <TextView
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="667dp"
        android:elevation="60dp"
        android:text="FACEBOOK"
        android:textAppearance="@style/facebook"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <View
        android:id="@+id/group_17863"
        android:layout_width="28.62dp"
        android:layout_height="29.7dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="663dp"
        android:background="@drawable/logo_fb"
        android:elevation="60dp" />

    <View
        android:id="@+id/btn_google"
        android:layout_width="139.26dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="650dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/rectangle_white"
        android:elevation="35.75dp" />


    <View
        android:id="@+id/logo_google"
        android:layout_width="28.62dp"
        android:layout_height="29.7dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="661dp"
        android:layout_marginRight="128dp"
        android:background="@drawable/icons_google"
        android:elevation="60dp" />

    <TextView
        android:id="@+id/google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="667dp"
        android:layout_marginRight="55dp"
        android:elevation="60dp"
        android:text="GOOGLE"
        android:textAppearance="@style/facebook"
        android:textColor="@color/black"
        android:textStyle="bold"/>



</RelativeLayout>