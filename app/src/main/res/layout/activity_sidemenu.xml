<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    tools:context=".sidemenu">

    <!-- Content View -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Your existing content goes here -->

    </RelativeLayout>

    <!-- Navigation Drawer -->
    <RelativeLayout
        android:id="@+id/side_menu"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF">

        <!-- Add your header view (rectangle_1) -->
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:src="@drawable/profile_image"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="26dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="36dp" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="26dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="147dp"
            android:text="Sourav Malani"
            android:fontFamily="@font/sofia_pro_semibold"
            android:textSize="20sp"
            android:layout_below="@id/profile_image"
            android:gravity="top" />

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:text="souravmalani95@gmail.com"
            android:fontFamily="@font/sofia_pro_semibold"
            android:textSize="15sp"
            android:layout_below="@id/user_name"
            android:gravity="top" />

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/user_email"
            android:layout_marginTop="45dp"
            android:background="@drawable/arrow_down" />

        <TextView
            android:id="@+id/menuItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:text="My Orders"
            android:textColor="@color/black"
            android:fontFamily="@font/sofia_pro_regular"
            android:textSize="16sp"
            android:layout_below="@id/user_email"
            android:layout_marginTop="40dp" />

        <!-- Your menu items -->
        <TextView
            android:id="@+id/menuItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:text="My Profile"
            android:textColor="@color/black"
            android:fontFamily="@font/sofia_pro_regular"
            android:textSize="16sp"
            android:layout_below="@id/menuItem1"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/menuItem3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:text="Delivery Address"
            android:textColor="@color/black"
            android:fontFamily="@font/sofia_pro_regular"
            android:textSize="16sp"
            android:layout_below="@id/menuItem2"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/menuItem4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:text="Payment Methods"
            android:textColor="@color/black"
            android:fontFamily="@font/sofia_pro_regular"
            android:textSize="16sp"
            android:layout_below="@id/menuItem3"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/menuItem5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:text="Contact Us"
            android:textColor="@color/black"
            android:fontFamily="@font/sofia_pro_regular"
            android:textSize="16sp"
            android:layout_below="@id/menuItem4"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/menuItem6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:text="Settings"
            android:textColor="@color/black"
            android:fontFamily="@font/sofia_pro_regular"
            android:textSize="16sp"
            android:layout_below="@id/menuItem5"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/menuItem7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:text="Helps &amp; FAQs"
            android:textColor="@color/black"
            android:fontFamily="@font/sofia_pro_regular"
            android:textSize="16sp"
            android:layout_below="@id/menuItem6"
            android:layout_marginTop="20dp" />

    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
