<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/holo_orange_light"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:id="@+id/firstRowThirdRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:orientation="horizontal"
        android:elevation="-7dp"
        android:background="@color/white">
    <androidx.cardview.widget.CardView
        android:layout_width="210dp"
        android:layout_height="220dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:layout_marginLeft="5dp"
        android:background="@color/cyan"
        >
        <!-- Parent FrameLayout 'FL' -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:background="#F9F7F4"

            >

            <RelativeLayout
                android:layout_width="210dp"
                android:layout_height="195dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_bottom_corners"

                >
                <ImageView
                    android:id="@+id/myImageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="135dp"
                    android:src="@drawable/pizza_image"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
                <TextView
                    android:id="@+id/textCreatePizza1"
                    android:layout_width="135dp"
                    android:layout_height="15dp"
                    android:text="@string/create_your"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/myImageView1"
                    android:textAppearance="@style/create_your"
                    android:lineSpacingExtra="-2sp"
                    android:gravity="center_horizontal|center_vertical"
                    />
                <TextView
                    android:id="@+id/choose_from1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textCreatePizza1"
                    android:layout_centerHorizontal="true"
                    android:text="@string/choose_from"
                    android:textAppearance="@style/choose_from"
                    android:lineSpacingExtra="0sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:alpha="0.8">
                </TextView>
            </RelativeLayout>
        </FrameLayout>
        <!-- Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="111dp"
            android:layout_height="28dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/rectangle_white"
            android:fontFamily="@font/signika_semibold"
            android:text="Create Now"
            android:textSize="12sp"
            android:textColor="@android:color/background_dark"
            android:elevation="0dp"
            android:layout_marginBottom="8dp"
            android:paddingBottom="2dp"
            />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="210dp"
        android:layout_height="220dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:layout_marginLeft="5dp"
        android:background="@color/cyan"
        >
        <!-- Parent FrameLayout 'FL' -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:background="#F9F7F4"

            >

            <RelativeLayout
                android:layout_width="210dp"
                android:layout_height="195dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_bottom_corners"

                >
                <ImageView
                    android:id="@+id/myImageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="135dp"
                    android:src="@drawable/pizza_image"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
                <TextView
                    android:id="@+id/textCreatePizza2"
                    android:layout_width="135dp"
                    android:layout_height="15dp"
                    android:text="@string/create_your"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/myImageView2"
                    android:textAppearance="@style/create_your"
                    android:lineSpacingExtra="-2sp"
                    android:gravity="center_horizontal|center_vertical"
                    />
                <TextView
                    android:id="@+id/choose_from2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textCreatePizza2"
                    android:layout_centerHorizontal="true"
                    android:text="@string/choose_from"
                    android:textAppearance="@style/choose_from"
                    android:lineSpacingExtra="0sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:alpha="0.8">
                </TextView>
            </RelativeLayout>
        </FrameLayout>
        <!-- Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="111dp"
            android:layout_height="27dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/rectangle_white"
            android:fontFamily="@font/signika_semibold"
            android:text="Create Now"
            android:textSize="12sp"
            android:textColor="@android:color/background_dark"
            android:elevation="0dp"
            android:layout_marginBottom="8dp"
            />

    </androidx.cardview.widget.CardView>

    </LinearLayout>

    </LinearLayout>
