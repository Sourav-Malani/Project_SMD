<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homescreen">
    <!-- Auto layout, variables, and unit scale are not yet supported -->
    <RelativeLayout
        android:id="@+id/firstRelativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#23989393"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.17"
        android:layout_marginTop="0dp">
        >

        <ImageView
            android:id="@+id/vectorImageView"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/sidebar_button"
            android:background="null"/>
        <TextView
            android:id="@+id/deliver_to"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:text="Deliver to"
            android:fontFamily="@font/sofiapro_light"
            android:lineHeight="17sp"
            android:textSize="14sp"
            android:textColor="#8C9099"
            android:lineSpacingExtra="-2sp"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal|top"
            />

        <View
            android:id="@+id/arrow_down"
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="153dp"
            android:background="@drawable/arrow_down">
        </View>
        <TextView
            android:id="@+id/jinnah_aven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:text="Jinnah Avenue, G-5"
            android:textSize="18sp"
            android:textColor="#FE724C"
            android:fontFamily="@font/sofiapro_light"
            android:textStyle="bold"
            android:lineHeight="18sp"
            android:lineSpacingExtra="-2sp"
            android:gravity="center_horizontal|top"
            android:layout_marginTop="55dp"

            />

        <androidx.cardview.widget.CardView
            android:layout_width="59dp"
            android:layout_height="57dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            app:cardCornerRadius="12dp">
            <ImageView
                android:id="@+id/img_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/backgroud_welcome" />
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
    <!-- Second RelativeLayout (Rest of the space) -->
    <RelativeLayout
        android:id="@+id/secondRelativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/firstRelativeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05">

        <!-- Add your content for the second RelativeLayout here -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rectangle_6"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:text="Starters"
                    android:gravity="center"
                    android:fontFamily="@font/signika_semibold"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:background="@drawable/rectangle_orange"
                    />

                <TextView
                    android:id="@+id/rectangle_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asian"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/signika_semibold"
                    android:textSize="14sp"
                    android:textColor="#3E404A"
                    />
                <TextView
                    android:id="@+id/rectangle_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Placha &amp; Roasts &amp; Grills"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/signika_semibold"
                    android:textSize="14sp"
                    android:textColor="#3E404A"
                    />
                <TextView
                    android:id="@+id/rectangle_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Classci"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/signika_semibold"
                    android:textSize="14sp"
                    android:textColor="#3E404A"
                    />

                <!-- Add more rectangles as needed -->

            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
    <!-- Third RelativeLayout -->
    <RelativeLayout
        android:id="@+id/thirdRelativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/secondRelativeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.26"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/firstRowThirdRelativeLayout">

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@color/blue">
                <!-- Content for the first RelativeLayout -->
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@color/indigo">
                <!-- Content for the second RelativeLayout -->
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <!-- Fourth RelativeLayout -->
    <RelativeLayout
        android:id="@+id/fourthRelativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/thirdRelativeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.26"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/firstRowFourthRelativeLayout">

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@color/cyan">
                <!-- Content for the first RelativeLayout -->
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@color/red">
                <!-- Content for the second RelativeLayout -->
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>